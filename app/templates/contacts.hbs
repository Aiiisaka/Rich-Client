{{page-title "Contacts"}}
  <br>
  <div class="nav-justified">
    <BsNav @type="tabs" as |nav|>
      <nav.item>
        <nav.link-to @route="contacts">Contacts</nav.link-to>
      </nav.item>
      <nav.item>
        <nav.link-to @route="categories.contacts" @model="category_id">Catégories</nav.link-to>
      </nav.item>
      <nav.item>
        <nav.link-to @route="contacts">Ceci est un essai</nav.link-to>
      </nav.item>
    </BsNav>
  </div>

  <div class="card text-center border-info mb-3">

    <div class="card-header">
      <h3>Contacts</h3>
    </div>

    <div class="card-body">
      <br>
      <h3 class="card-title"><b>Liste des Contacts :</b></h3>
      <br>
      <Input type="text" placeholder="Filtrer ..." class="form-control ng-pristine ng-valid ng-touched"/>
      <br>
      <table class="table table-striped table-bordered border-secondary">

        <thead class="table-dark">
          <tr>
            <td>Nom</td>
            <td>Prénom</td>
            <td>Mél</td>
            <td>Modifier / Supprimer</td>
          </tr>
        </thead>

        <tbody class="table-light">
        {{#each @model.contacts as |contact|}}
          <tr>
            <td>{{contact.nom}}</td>
            <td>{{contact.prenom}}</td>
            <td>{{contact.email}}</td>
            <td>
              <LinkTo @route="contacts.update" @model={{contact.id}} class="btn btn-primary btn-xs">
                <i class="glyphicon glyphicon-edit"/>
              </LinkTo>

              &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

              <a class="btn btn-danger btn-xs" {{action "delete" contact}}>
                <span class="glyphicon glyphicon-remove-circle"></span>
              </a>
            </td>
          </tr>
        {{/each}}

        </tbody>

      </table>

      <b>Nombre de contacts : {{ @model.contactsCount }}</b>

      {{#if @model.deletedsCount}}
        <br>
        <button class="btn btn-danger" {{action "cancelDeletion" @model.deleteds}}>Annuler la suppression ({{@model.deletedsCount}})</button>
        &nbsp;&nbsp;&nbsp;
        <button class="btn btn-success" {{action "confirmDeletion" @model.deleteds}}>Confirmer la suppression ({{@model.deletedsCount}})</button>
      {{/if}}
    </div>

    <br><br>

    <div class="card-footer">
      <br>
      <p class="lead"><LinkTo @route="contacts.add">Ajouter</LinkTo></p>
    </div>

  </div>

{{outlet}}