{{page-title "Order"}}
  <div style="text-align: right;">
    <button class="ui black button" {{action "board"}}>Board<i class="icon arrow right"></i></button>
  </div>

  <div class="ui grid">
    <div class="column two wide"></div>

    <div class="column five wide">
      <fieldset>
        <legend>&nbsp;Client&nbsp;</legend>
        <b>
          User name : {{@model.order.user.name}}
          <br>
          User email : {{@model.order.user.email}}
        </b>
      </fieldset>
    </div>

    <div class="column seven wide">
      <fieldset>
        <legend>&nbsp;Command&nbsp;</legend>
        <b>
          <div class="ui list">
            <div class="item">
              <div class="left floated content">
                Order N°{{@model.order.id}}
                <br>
                Date order : {{moment-format @model.order.dateCreation 'DD-MM-YYYY'}}
                <br>
                Time slot : {{moment-format @model.order.idTimeSlot.slotDate 'LLLL'}}
              </div>

              <div class="right floated content">
                Quantity : {{@model.quantity}}
                <br>
                Amount : {{@model.order.amount}} €
                <br>
                Rest to pay : {{@model.order.toPay}} €
              </div>
            </div>
          </div>
        </b>
      </fieldset>
    </div>

    <div class="column two wide"></div>
    <div class="column two wide"></div>

    <div class="column twelve wide">
      <fieldset>
        <legend>&nbsp;To Prepare&nbsp;</legend>

        <div class="ui items">
          <hr>
          {{#each @model.product as |productList|}}
            <div class="item">
              <div class="content">
                <br>
                <div style="text-align: left">
                  {{productList.name}}
                  &nbsp;&nbsp;&nbsp;
                  {{#if @model.prepared }}
                    <i class="icon close red">&nbsp;PREPARED</i>
                  {{else}}
                    <i class="icon check green">&nbsp;PREPARED</i>
                  {{/if}}
                </div>
                <div style="text-align: right">
                  <div class="header">
                    Quantity : {{@model.quantity}}
                  </div>

                  <div class="extra">
                    Price : {{productList.price}} €
                    <br>
                    {{productList.promotion}} €
                  </div>
                </div>

                <br>
              </div>
            </div>
            <hr>
          {{/each}}
        </div>
      </fieldset>
    </div>

    <div class="column two wide"></div>
    <div class="column two wide"></div>

    <div class="column twelve wide">
      <fieldset>
        <legend>&nbsp;Advancement&nbsp;</legend>
        <div class="ui indicating progress" data-value="{{@model.order.missingNumber}}"
             id="progress" data-total="{{@model.order.itemsNumber}}"
             data-percent="100*{{@model.order.missingNumber}}/{{@model.order.itemsNumber}}">
          <div class="bar">
            <div class="progress"></div>
          </div>
          <div class="label">
            {{@model.order.missingNumber}}/{{@model.order.itemsNumber}} prepared products
          </div>
        </div>

        <div class="ui list">
          <div class="item">
            <div class="left floated content">
              <button class="ui red button"><i class="icon remove"/>&nbsp;&nbsp;Delete All</button>
            </div>
            <div class="right floated content">
              <button class="ui green button"><i class="icon check"/>&nbsp;&nbsp;Command Completed</button>
            </div>
          </div>
        </div>

      </fieldset>
    </div>
  </div>

{{outlet}}